[github]
	user = lishaduck

[core]
	excludesFile = ~/.config/git/ignore
	editor = code --wait
	filemode = true
	repositoryformatversion = 1
	logAllRefUpdates = true
	autoCrlf = false
	fsMonitor = true

[include]
	path = ~/.config/git/local.config

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	default = upstream
	followTags = true
	autoSetUpRemote = true
	useForceIfIncludes = true

[fetch]
	fsckObjects = true
	prune = true
	pruneTags = true

[rebase]
	autoStash = true
	autoSquash = true
	updateRefs = true
	missingCommitsCheck = error

[status]
	submoduleSummary = true

[branch]
	sort = -committerdate

[grep]
	lineNumber = true

[diff]
	algorithm = histogram
	colorMoved = default
	guitool = vscode
	guiDefault = true
	submodule = log

[merge]
	conflictStyle = zdiff3
	keepBackup = false
	guitool = vscode
	guiDefault = true

[mergetool]
	keepBackup = false

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[alias]
	amend = commit --amend --reuse-message=HEAD
	pushall = !git remote | xargs -L1 git push --all
	graph = log --decorate --oneline --graph --shortstat

[color]
	ui = true

[sequence]
	editor = code --wait --reuse-window

[gpg]
	format = openpgp

[commit]
	gpgSign = true

[tag]
	gpgSign = true

[rerere]
	enabled = true

[submodule]
	recurse = true

[feature]
	manyFiles = true

[transfer]
	fsckObjects = true

[receive]
	fsckObjects = true
